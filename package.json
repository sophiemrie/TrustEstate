{
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.8",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.8",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.12",
    "@nomicfoundation/hardhat-web3-v4": "^1.0.0",
    "@nomicfoundation/ignition-core": "^0.15.8",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.5.0",
    "concurrently": "^9.1.0",
    "cpx": "^1.5.0",
    "ethers": "^6.13.4",
    "hardhat": "^2.22.16",
    "hardhat-gas-reporter": "^1.0.10",
    "http-server": "^14.1.1",
    "nodemon": "^3.1.7",
    "or": "^0.2.0",
    "rimraf": "^6.0.1",
    "solidity-coverage": "^0.8.14",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.1.0",
    "punycode": "^2.3.1",
    "solc": "^0.8.28",
    "web3": "^4.15.0"
  },
  "scripts": {
    "copy-artifacts": "rimraf ./frontend/assets/contracts/* && cpx \"./artifacts/contracts/TrustEstate.sol/TrustEstate.json\" ./frontend/src/assets/contracts",
    "build:contracts": "hardhat compile && npm run copy-artifacts",
    "build:contracts:watch": "nodemon -e sol,js --exec \"npm run build:contracts && npm run deploy\"",
    "test": "hardhat test",
    "test:watch": "nodemon -e sol,test.js --exec npm run test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "start:hardhat": "hardhat node",
    "start:frontend": "npm --prefix frontend run start",
    "generate-types": "npm --prefix frontend run generate-types",
    "generate-types:watch": "npm --prefix frontend run generate-types:watch",
    "hardhat:node": "hardhat node",
    "deploy": "wait-on http://127.0.0.1:8545 && hardhat run --network localhost scripts/deploy.js",
    "start": "concurrently \"npm:build:contracts:watch\" \"npm:start:frontend\" \"npm:generate-types:watch\" \"npm:hardhat:node\""
  }
}
